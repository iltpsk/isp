<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.Title.Collapsed" parent="android:TextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Title.Expanded" parent="android:TextAppearance">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize4Percent" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerSize">4%</item>
    </style>

    <style name="MovieDetails"/>

    <style name="MovieDetails.TitleTextStyle">
        <item name="android:textColor">@color/textColorLight</item>
        <item name="android:textSize">@dimen/dimens_26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/dimens_24</item>
        <item name="android:layout_marginTop">@dimen/dimens_10</item>
        <item name="android:layout_marginEnd">@dimen/dimens_8</item>
    </style>

    <style name="MovieDetails.NormalText">
        <item name="android:textColor">@color/textColorGrey</item>
        <item name="android:textSize">@dimen/dimens_12sp</item>
    </style>

    <style name="MovieDetails.BoldText">
        <item name="android:textColor">@color/textColorLight</item>
        <item name="android:textSize">@dimen/dimens_12sp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
